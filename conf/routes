# Routes
# This file defines all application routes (Higher priority routes first)
# https://www.playframework.com/documentation/latest/ScalaRouting
# ~~~~

# An example controller showing a sample home page
GET     /                           controllers.Application.index
GET     /files/                     controllers.Application.listFiles(path: String = ".")
GET     /files/*path                controllers.Application.listFiles(path: String)
GET     /image/*path                controllers.Application.showImage(path: String)
GET     /metadata/*path             controllers.Application.showMetadata(path: String)
GET     /annotation/*path           controllers.Application.showAnnotation(path: String)
POST    /annotation/*path           controllers.Application.newAnnotation(path: String)
GET     /train                      controllers.Application.trainModel(size: Int)

# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file               controllers.Assets.versioned(path="/public", file: Asset)
